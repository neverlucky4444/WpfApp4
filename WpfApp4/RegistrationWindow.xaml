<Window x:Class="WpfApp4.RegistrationWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="300" Width="400">
    <StackPanel>
        <TextBlock Text="Регистрация пользователя" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
        <TextBox x:Name="UsernameTextBox" PlaceholderText="Имя" Margin="10"/>
        <PasswordBox x:Name="PasswordTextBox" Margin="10"/>
        <Button Content="Зарегистрироваться" Margin="10" Click="RegisterUser"/>
    </StackPanel>
</Window>
