<Window x:Class="WpfApp4.PaymentWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оплата" Height="200" Width="300">
    <StackPanel>
        <TextBlock Text="Введите данные карты" Margin="10"/>
        <TextBox PlaceholderText="Номер карты" Margin="10"/>
        <Button Content="Оплатить" Margin="10" Click="ProcessPayment"/>
    </StackPanel>
</Window>